    <style name="Theme.KeyspaceMobile.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/lightFinesseColor</item>
        <item name="colorSecondary">@color/lightFinesseColor</item>
        <item name="colorTertiary">@color/lightFinesseColor</item>
        <item name="colorContainer">@color/lightFinesseColor</item>
        <item name="colorPrimaryContainer">@color/lightFinesseColor</item>
        <item name="colorSecondaryContainer">@color/lightFinesseColor</item>
