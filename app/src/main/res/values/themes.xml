    <style name="Theme.KeyspaceMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.KeyspaceMobile.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/keyspace_animated_logo_mini</item>
        <item name="windowSplashScreenAnimationDuration">250</item>
        <item name="android:windowActivityTransitions">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.KeyspaceMobile.NoActionBar</item>
    </style>

    <style name="Theme.KeyspaceMobile.Transparent" parent="Theme.KeyspaceMobile.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:actionBarTheme">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
